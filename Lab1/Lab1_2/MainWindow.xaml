<Window x:Class="Lab1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Книга.jpg"/>
        </Grid.Background>

        <Label x:Name="QuestionLabel"
               Content="Яку останню книгу ви читали?"
               HorizontalAlignment="Center"
               Margin="0,59,0,0"
               VerticalAlignment="Top"
               Height="30"
               Width="500"
               FontFamily="Times New Roman"
               FontSize="20"
               Background="White"/>

        <TextBox x:Name="AnswersBox"
                 HorizontalAlignment="Center"
                 Margin="0,183,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="294"
                 FontFamily="Times New Roman"
                 FontSize="20" />

        <Button x:Name="SaveAnswerButton"
                Content="Тиць"
                HorizontalAlignment="Center"
                Margin="0,291,0,0"
                VerticalAlignment="Top"
                Height="62"
                Width="224"
                FontFamily="Times New Roman"
                FontSize="20"
                Background="White"
                Click="SaveAnswerButton_Click">

            <Button.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
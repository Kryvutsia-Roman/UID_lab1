<Window x:Class="Lab1_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab1_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <Color x:Key="SolidColorBrushColor1">#FFDDDDDD</Color>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Книга.jpg"/>
        </Grid.Background>
        <Label Content="Яку останню книгу ти прочитав?" HorizontalAlignment="Center" Margin="0,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.262,-0.645" Height="30" Width="294" FontFamily="Times New Roman" FontSize="20" Background="White"/>
        <TextBox Name="textBox1" HorizontalAlignment="Center" Margin="0,183,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="294" FontFamily="Times New Roman" FontSize="20" />
        <Button Content="Тиць" HorizontalAlignment="Center" Margin="0,291,0,0" VerticalAlignment="Top" Height="62" Width="224" FontFamily="Times New Roman" FontSize="20" Background="White" Click="Button_Click">
            <Button.BorderBrush>
                <SolidColorBrush Color="Transparent"/>
            </Button.BorderBrush>
        </Button>

    </Grid>
</Window>
